<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.auditoria.grilla5s">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <provider
            android:name=".GenericFileProvider"
            android:authorities="${applicationId}.my.package.name.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths"/>
        </provider>


        <activity android:name=".View.Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.Activities.ActivityMyAudits"
            android:screenOrientation="portrait"
            android:parentActivityName=".View.Activities.LandingActivity" />
        <activity

            android:name=".View.Activities.LoginActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance" />
        <activity
            android:name=".View.Activities.SettingsActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".View.Activities.LandingActivity" />
        <activity
            android:name=".View.Activities.ActivityVerAuditorias"
            android:parentActivityName=".View.Activities.GraficosActivity" />
        <activity
            android:name=".View.Activities.GraficosActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".View.Activities.LandingActivity" />
        <activity
            android:name=".View.Activities.ActivityPreAuditoria"
            android:launchMode="singleTop"
            android:parentActivityName=".View.Activities.LandingActivity" />
        <activity android:name=".View.Activities.LandingActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".View.Activities.ActivityAuditoria"
            android:screenOrientation="portrait"
            android:parentActivityName=".View.Activities.ActivityPreAuditoria" />
        <activity android:name=".View.Activities.ActivityZoom"></activity>
    </application>

</manifest>