<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/marfil"
    android:layout_height="400dp"
    >

    <TextView
        android:layout_marginTop="@dimen/margenGrande"
        android:id="@+id/tituloAreaHistorico"
        android:layout_gravity="center_horizontal"
        android:text="@string/evolucionDelArea"
        android:textSize="20sp"
        android:textColor="@color/tile4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginEnd="@dimen/margenGrande"
        android:layout_marginStart="@dimen/margenGrande"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <com.github.mikephil.charting.charts.CombinedChart
        android:layout_margin="@dimen/margenGrande"
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />


    


</LinearLayout>
