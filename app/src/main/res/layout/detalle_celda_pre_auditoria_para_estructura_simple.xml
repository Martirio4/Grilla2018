<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/blancoNomad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/altoTarjeta3"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margenMini"
        android:layout_marginStart="@dimen/margenChico"
        android:layout_marginEnd="@dimen/margenChico"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/marfil">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margenMini"
            android:layout_marginEnd="@dimen/margenChico"
            android:layout_marginStart="@dimen/margenChico"
            android:layout_marginTop="@dimen/margenMini"
            android:orientation="horizontal">

                <TextView
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/boton_pre_audit"
                    android:paddingStart="@dimen/margenGrande"
                    android:paddingEnd="@dimen/margenGrande"
                    android:textSize="@dimen/textoRecyclerPreAudit"
                    android:text="1"
                    android:textColor="@color/primary_text"
                    android:id="@+id/tv_numero_item"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus dignissim metus felis, a dictum odio gravida in. In quam arcu, placerat ut est vel, accumsan maximus sem. In hac habitasse platea dictumst. Nam id leo sapien. Nam in lorem non ipsum consectetur bibendum. Mauris sit amet risus"
                        android:maxLines="3"
                        android:padding="@dimen/margenChico"
                        android:gravity="start|center_vertical"
                        android:textAlignment="textStart"
                        android:id="@+id/tv_descripcion_item"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_gravity="end|center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_weight="50"
                    android:background="@android:color/transparent"
                    android:id="@+id/botonEliminarItem"
                    android:src="@drawable/ic_close_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />
                <ImageButton
                    android:layout_weight="50"
                    android:background="@android:color/transparent"
                    android:id="@+id/botonEditarItem"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />


            </LinearLayout>

        </FrameLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

