<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blancoNomad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nomad.mrg5s.View.Activities.ActivityAuditoria">

    <ScrollView
        android:clipToPadding="false"
        android:paddingBottom="@dimen/paddingBottomRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/blancoNomad"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_marginStart="@dimen/margenChico"
                android:layout_marginEnd="@dimen/margenChico"
                android:layout_marginTop="@dimen/margenMini"
                android:text="@string/enunciado"
                android:textColor="@color/tile5"
                android:id="@+id/tituloCriterio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:layout_marginStart="@dimen/margenChico"
                android:layout_marginEnd="@dimen/margenChico"
                android:layout_marginTop="@dimen/margenMini"
                android:text="@string/enunciado"
                android:textColor="@color/secondary_text"
                android:id="@+id/descripcionCriterio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="@dimen/margenChico"
                android:layout_marginStart="@dimen/margenChico"
                android:layout_marginEnd="@dimen/margenChico"
                android:text="@string/enunciado"
                android:textColor="@color/primary_text"
                android:id="@+id/textoPregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/margenChico"
                android:minHeight="@dimen/altoCriterios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margenMini"
                android:layout_marginStart="@dimen/margenChico"
                android:layout_marginEnd="@dimen/margenChico"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/marfil">


                <LinearLayout
                    android:minHeight="@dimen/altoCriterios"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margenMini"
                    android:layout_marginEnd="@dimen/margenChico"
                    android:layout_marginStart="@dimen/margenChico"
                    android:layout_marginTop="@dimen/margenMini"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:background="@drawable/boton_malo"
                        android:paddingStart="@dimen/margenGrande"
                        android:paddingEnd="@dimen/margenGrande"
                        android:textSize="@dimen/textoRecyclerPreAudit"
                        android:text="1"
                        android:textColor="@color/primary_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_weight="80"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Lorem ratm. Mauris sit amet risus"
                            android:padding="@dimen/margenChico"
                            android:gravity="start|center_vertical"
                            android:textAlignment="textStart"
                            android:id="@+id/tv_descripcion_item"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_margin="@dimen/margenMini"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/boton_suelto"
                            android:id="@+id/circuloApretado"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/altoCriterios" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:minHeight="@dimen/altoCriterios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margenMini"
                android:layout_marginStart="@dimen/margenChico"
                android:layout_marginEnd="@dimen/margenChico"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/marfil">


                <LinearLayout
                    android:minHeight="@dimen/altoCriterios"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margenMini"
                    android:layout_marginEnd="@dimen/margenChico"
                    android:layout_marginStart="@dimen/margenChico"
                    android:layout_marginTop="@dimen/margenMini"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:background="@drawable/boton_regular"
                        android:paddingStart="@dimen/margenGrande"
                        android:paddingEnd="@dimen/margenGrande"
                        android:textSize="@dimen/textoRecyclerPreAudit"
                        android:text="2"
                        android:textColor="@color/primary_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_weight="80"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Lorem ratm. Mauris sit amet risus"
                            android:padding="@dimen/margenChico"
                            android:gravity="start|center_vertical"
                            android:textAlignment="textStart"
                            android:id="@+id/tv_descripcion_item2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_margin="@dimen/margenMini"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/boton_suelto"
                            android:id="@+id/circuloApretado2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/altoCriterios" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:minHeight="@dimen/altoCriterios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margenMini"
                android:layout_marginStart="@dimen/margenChico"
                android:layout_marginEnd="@dimen/margenChico"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/marfil">


                <LinearLayout
                    android:minHeight="@dimen/altoCriterios"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margenMini"
                    android:layout_marginEnd="@dimen/margenChico"
                    android:layout_marginStart="@dimen/margenChico"
                    android:layout_marginTop="@dimen/margenMini"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:background="@drawable/boton_bueno"
                        android:paddingStart="@dimen/margenGrande"
                        android:paddingEnd="@dimen/margenGrande"
                        android:textSize="@dimen/textoRecyclerPreAudit"
                        android:text="3"
                        android:textColor="@color/primary_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_weight="80"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:gravity="center_vertical"
                            android:text="Lorem ipsum tur bibendum. Mauris sit amet risus"
                            android:padding="@dimen/margenChico"
                            android:id="@+id/tv_descripcion_item3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_margin="@dimen/margenMini"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/boton_suelto"
                            android:id="@+id/circuloApretado3"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/altoCriterios" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:minHeight="@dimen/altoCriterios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margenMini"
                android:layout_marginStart="@dimen/margenChico"
                android:layout_marginEnd="@dimen/margenChico"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/marfil">


                <LinearLayout
                    android:minHeight="@dimen/altoCriterios"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margenMini"
                    android:layout_marginEnd="@dimen/margenChico"
                    android:layout_marginStart="@dimen/margenChico"
                    android:layout_marginTop="@dimen/margenMini"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:background="@drawable/boton_excelente"
                        android:paddingStart="@dimen/margenGrande"
                        android:paddingEnd="@dimen/margenGrande"
                        android:textSize="@dimen/textoRecyclerPreAudit"
                        android:text="4"
                        android:textColor="@color/primary_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_weight="80"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Lorem ipsum tur bibendum. Mauris sit amet risus"
                            android:padding="@dimen/margenChico"
                            android:gravity="start|center_vertical"
                            android:textAlignment="textStart"
                            android:id="@+id/tv_descripcion_item4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_margin="@dimen/margenMini"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/boton_suelto"
                            android:id="@+id/circuloApretado4"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/altoCriterios" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <TextView
                android:layout_marginTop="@dimen/margenChico"
                android:visibility="gone"
                android:textColor="@color/tile5"
                android:text="@string/fotosViejas"
                android:textSize="16sp"
                android:paddingStart="@dimen/margenChico"
                android:paddingEnd="@dimen/margenChico"
                android:id="@+id/tv_fotos_viejas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/SeparadorSuperior"
                android:layout_marginStart="@dimen/margenChico"
                android:layout_marginEnd="@dimen/margenChico"
                android:layout_marginTop="@dimen/margenMini"
                android:background="@drawable/separador_invertido"
                android:layout_width="match_parent"
                android:layout_height="2dp" />

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="@dimen/margenMicro"
                android:layout_marginBottom="@dimen/margenMicro"
                android:id="@+id/recyclerFotosViejas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <TextView
                android:paddingStart="@dimen/margenChico"
                android:paddingEnd="@dimen/margenChico"
                android:visibility="gone"
                android:text="@string/tagCommentViejo"
                android:textSize="12sp"
                android:textColor="@color/tile5"
                android:id="@+id/tv_tagCommentViejo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_comment_viejo"
                android:paddingStart="@dimen/margenChico"
                android:paddingEnd="@dimen/margenChico"
                android:layout_marginBottom="@dimen/margenMini"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/margenTextoViejo"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/SeparadorInferior"
                android:layout_marginStart="@dimen/margenChico"
                android:layout_marginEnd="@dimen/margenChico"
                android:background="@drawable/separador"
                android:layout_width="match_parent"
                android:layout_height="2dp" />

            <TextView
                android:layout_marginTop="@dimen/margenChico"
                android:visibility="gone"
                android:textColor="@color/tile5"
                android:text="@string/findingsNuevo"
                android:textSize="16sp"
                android:paddingStart="@dimen/margenChico"
                android:paddingEnd="@dimen/margenChico"
                android:id="@+id/tv_fotos_nuevas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginStart="@dimen/margenChico"
                android:layout_marginEnd="@dimen/margenChico"
                android:paddingStart="@dimen/margenChico"
                android:paddingEnd="@dimen/margenChico"
                android:visibility="gone"
                android:text="@string/tagCommentNuevo"
                android:textSize="16sp"
                android:textColor="@color/tile5"
                android:id="@+id/tv_tagCommentNuevo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginStart="@dimen/margenChico"
                android:layout_marginEnd="@dimen/margenChico"
                android:textSize="16sp"
                android:visibility="gone"
                android:paddingStart="@dimen/margenChico"
                android:paddingEnd="@dimen/margenChico"
                android:id="@+id/tv_comment_nuevo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="@dimen/margenChico"
                android:layout_marginBottom="@dimen/margenChico"
                android:id="@+id/recyclerFotos"
                android:layout_width="match_parent"
                android:layout_height="@dimen/altoRecyclerFotosActuales">
            </android.support.v7.widget.RecyclerView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_marginStart="60dp"
        android:layout_marginBottom="60dp"
        android:layout_gravity="bottom|start"
        android:id="@+id/vistaCentral"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|end"
        app:menu_backgroundColor="@color/blancoNomadTR" />
</FrameLayout>
