<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blancoNomad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.auditoria.grilla5s.View.Activities.ActivityAuditoria">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/blancoNomad"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_marginStart="@dimen/margenChico"
                android:layout_marginEnd="@dimen/margenChico"
                android:layout_marginTop="@dimen/margenMini"
                android:text="@string/enunciado"
                android:textColor="@color/tile5"
                android:id="@+id/tituloCriterio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:layout_marginStart="@dimen/margenChico"
                android:layout_marginEnd="@dimen/margenChico"
                android:layout_marginTop="@dimen/margenMini"
                android:text="@string/enunciado"
                android:textColor="@color/secondary_text"
                android:id="@+id/descripcionCriterio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:textSize="20sp"
               android:layout_marginTop="@dimen/margenChico"
                android:layout_marginStart="@dimen/margenChico"
                android:layout_marginEnd="@dimen/margenChico"
                android:text="@string/enunciado"
                android:textColor="@color/primary_text"
                android:id="@+id/textoPregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:orientation="horizontal"
                android:animateLayoutChanges="true"
                android:layout_margin="@dimen/margenChico"
                android:visibility="visible"
                android:id="@+id/rg1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatRadioButton
                    android:textColorHighlight="@color/colorAccent"
                    app:buttonTint="@color/tile4"
                    android:layout_margin="@dimen/margenMini"
                    android:textColor="@color/primary_text"
                    android:id="@+id/item0"
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:textColorHighlight="@color/colorAccent"
                    app:buttonTint="@color/tile4"
                    android:layout_margin="@dimen/margenMini"
                    android:textColor="@color/primary_text"
                    android:id="@+id/item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:textColorHighlight="@color/colorAccent"
                    app:buttonTint="@color/tile4"
                    android:id="@+id/item2"
                    android:textColor="@color/primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margenMini"
                   />

                <android.support.v7.widget.AppCompatRadioButton
                    android:textColorHighlight="@color/colorAccent"
                    app:buttonTint="@color/tile4"
                    android:layout_margin="@dimen/margenMini"
                    android:textColor="@color/primary_text"

                    android:id="@+id/item3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.AppCompatRadioButton
                    android:textColorHighlight="@color/colorAccent"
                    app:buttonTint="@color/tile4"
                    android:layout_margin="@dimen/margenMini"
                    android:textColor="@color/primary_text"

                    android:id="@+id/item4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.AppCompatRadioButton
                    android:textColorHighlight="@color/colorAccent"
                    app:buttonTint="@color/tile4"
                    android:layout_margin="@dimen/margenMini"
                    android:textColor="@color/primary_text"
                    android:id="@+id/item5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RadioGroup>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="50"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </LinearLayout>
                <Button
                    android:id="@+id/btn_criterios"
                    android:textColor="@color/marfil"
                    android:background="@drawable/boton_criterio"
                    android:text="@string/verCriterios"
                    android:layout_gravity="center"
                    android:layout_weight="60"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:id="@+id/rg2"
                    android:layout_margin="@dimen/margenChico"
                    android:gravity="center"
                    android:layout_weight="50"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:textColorHighlight="@color/tile3"
                        app:buttonTint="@color/colorAccent"
                        android:layout_margin="@dimen/margenMini"
                        android:textColor="@color/primary_text"
                        android:id="@+id/itemNA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RadioGroup>

            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/margenChico"
                android:visibility="gone"
                android:textColor="@color/tile5"
                android:text="@string/fotosViejas"
                android:textSize="16sp"
                android:paddingStart="@dimen/margenChico"
                android:paddingEnd="@dimen/margenChico"
                android:id="@+id/tv_fotos_viejas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/SeparadorSuperior"
                android:layout_marginStart="@dimen/margenChico"
                android:layout_marginEnd="@dimen/margenChico"
                android:layout_marginTop="@dimen/margenMini"
                android:background="@drawable/separador_invertido"
                android:layout_width="match_parent"
                android:layout_height="2dp" />

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="@dimen/margenMicro"
                android:layout_marginBottom="@dimen/margenMicro"
                android:id="@+id/recyclerFotosViejas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <TextView
                android:paddingStart="@dimen/margenChico"
                android:paddingEnd="@dimen/margenChico"
                android:visibility="gone"
                android:text="@string/tagCommentViejo"
                android:textSize="12sp"
                android:textColor="@color/tile5"
                android:id="@+id/tv_tagCommentViejo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_comment_viejo"
                android:paddingStart="@dimen/margenChico"
                android:paddingEnd="@dimen/margenChico"
                android:layout_marginBottom="@dimen/margenMini"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/margenTextoViejo"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/SeparadorInferior"
                android:layout_marginStart="@dimen/margenChico"
                android:layout_marginEnd="@dimen/margenChico"
                android:background="@drawable/separador"
                android:layout_width="match_parent"
                android:layout_height="2dp" />

            <TextView
                android:layout_marginTop="@dimen/margenChico"
                android:visibility="gone"
                android:textColor="@color/tile5"
                android:text="@string/findingsNuevo"
                android:textSize="16sp"
                android:paddingStart="@dimen/margenChico"
                android:paddingEnd="@dimen/margenChico"
                android:id="@+id/tv_fotos_nuevas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginStart="@dimen/margenChico"
                android:layout_marginEnd="@dimen/margenChico"
                android:paddingStart="@dimen/margenChico"
                android:paddingEnd="@dimen/margenChico"
                android:visibility="gone"
                android:text="@string/tagCommentNuevo"
                android:textSize="16sp"
                android:textColor="@color/tile5"
                android:id="@+id/tv_tagCommentNuevo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginStart="@dimen/margenChico"
                android:layout_marginEnd="@dimen/margenChico"
                android:textSize="16sp"
                android:visibility="gone"
                android:paddingStart="@dimen/margenChico"
                android:paddingEnd="@dimen/margenChico"
                android:id="@+id/tv_comment_nuevo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="@dimen/margenChico"
                android:layout_marginBottom="@dimen/margenChico"
                android:id="@+id/recyclerFotos"
                android:layout_width="match_parent"
                android:layout_height="@dimen/altoRecyclerFotosActuales">
            </android.support.v7.widget.RecyclerView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_menu"
        android:layout_gravity="bottom|end"
        app:menu_backgroundColor="@color/blancoNomadTR"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:layout_marginStart="60dp"
        android:layout_marginBottom="60dp"
        android:layout_gravity="bottom|start"
        android:id="@+id/vistaCentral"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>
</FrameLayout>
