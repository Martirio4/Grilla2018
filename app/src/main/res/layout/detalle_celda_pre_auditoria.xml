<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/blancoNomad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/altoTarjeta3"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margenMini"
        android:layout_marginStart="@dimen/margenChico"
        android:layout_marginEnd="@dimen/margenChico"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/marfil">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margenMini"
            android:layout_marginEnd="@dimen/margenChico"
            android:layout_marginStart="@dimen/margenChico"
            android:layout_marginTop="@dimen/margenMini"
            android:orientation="horizontal">
            <TextView
                android:paddingStart="@dimen/margenGrande"
                android:paddingEnd="@dimen/margenGrande"
                android:background="@color/tile4"
                android:gravity="center"
                android:textSize="30sp"
                android:text="1"
                android:textColor="@color/blancoNomad"
                android:id="@+id/tv_numero_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:maxLines="3"
                    android:paddingStart="@dimen/margenChico"
                    android:paddingEnd="@dimen/margenChico"
                    android:text="texto de prueba numero uno, para identificar la cantidad de texto entrante en la elda"
                    android:gravity="center"
                    android:id="@+id/tv_descripcion_item"
                    android:layout_width="match_parent"
                    android:layout_weight="80"
                    android:layout_height="0dp" />
                <TextView
                    android:textColor="@color/tile5"
                    android:textSize="12sp"
                    android:layout_weight="20"
                    android:layout_gravity="bottom"
                    android:text="@string/faltanPreguntas"
                    android:id="@+id/tv_preguntasFaltantes"
                    android:paddingStart="@dimen/margenChico"
                    android:paddingEnd="@dimen/margenChico"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

