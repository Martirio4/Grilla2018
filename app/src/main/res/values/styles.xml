<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/marfil</item>
        <item name="colorControlActivated">@color/primary_text</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>
    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/primary_text</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>


    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ToolbarTheme" parent="android:Theme.Holo">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_white_black_24dp</item>
        <item name="android:colorActivatedHighlight">@color/mirgorAzul</item>
    </style>


</resources>
